{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Stack for Amplify App",
  "Parameters": {
    "AppId": {
      "Description": "Amplify app ID",
      "Type": "String"
    },
    "DomainName": {
      "Description": "Github's repository branch",
      "Type": "String"
    }
  },
  "Resources": {
    "AmplifyDomain": {
      "Type": "AWS::Amplify::Domain",
      "Properties": {
        "AppId": {
          "Ref": "AppId"
        },
        "DomainName": {
          "Ref": "DomainName"
        },
        "SubDomainSettings": []
      }
    }
  }
}